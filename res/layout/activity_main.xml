<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->    
    <LinearLayout
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px">
    </LinearLayout>

    <LinearLayout android:weightSum="600" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">	<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffFFC919"
    android:padding="2dp" >
    
     <TextView
         android:id="@+id/editText1"
         android:layout_width="170dp"
         android:layout_height="wrap_content"
         android:ems="10"
         android:gravity="center"
        android:background="#FFFFFFE0"
         android:nextFocusLeft="@id/editText1"
         android:nextFocusUp="@id/editText1"
         android:text="00:00"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textSize="55dp" >

     </TextView>
	</LinearLayout>

 <ToggleButton
     android:id="@+id/toggleButton1"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_marginLeft="5dp"
     android:checked="true"
     android:text="ToggleButton"
     android:textOff="Gong-Fu brewing OFF"
     android:textOn="Gong-Fu brewing ON" />
 
</LinearLayout>

<LinearLayout
    android:id="@+id/kannalayout"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_marginTop="1dp"
    android:orientation="horizontal"
    android:padding="2dp" >
 
</LinearLayout>
 
  <LinearLayout android:weightSum="600" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      
    <Button
        android:layout_weight="200"
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="2dp"
        android:text="@string/start" />
    
    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="200"
        android:text="@string/stop" />

    <Button
        android:layout_weight="200"
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/fwd" />
</LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:listSelector="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </ListView>

</LinearLayout>